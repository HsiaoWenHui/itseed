<!--HEADER-->
<% include ../header %>
<!--END HEADER-->

<section class="bg-white">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<table class="table table-hover">
					<thead>
						<tr>
							<th class="col-md-8">課程名稱</th>
							<th class="col-md-2">講師</th>
							<th class="col-md-2">照片</th>
						</tr>
					</thead>
					<tbody>
					<% for(var i = 0; i < datas.length; i++){ %>
						<tr>
							<td>
								<a href="<%= url + datas[i].id %>">		
									<%= datas[i].title %>		
								</a>
							</td>
							<td><%= datas[i].speaker + " " + datas[i].speakerTitle %></td>
							<td><img class="img-responsive" src="<%= datas[i].photo %>" alt=""></td>
						</tr>
					<% } %>
					</tbody>
				</table>	
			</div>
		</div>
	</div>
</section>

<!--FOOTER-->
<% include ../footer %>
<!--END FOOTER-->