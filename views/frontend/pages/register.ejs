<div class="container-fluid" id="register">
  <div class="window">
    <img src="http://www.itseed.tw/image/frame/logo.png">
    <form action="/register" method="post">
      <div>
        <input class="btn-lg btn-block" autofocus="autofocus" name="email" placeholder="電子信箱" type="email">
      </div>
      <div>
        <input class="btn-lg btn-block" name="pwd" placeholder="密碼" type="password">
      </div>
      <div>
        <input class="btn-lg btn-block" name="pwd_confirmation" placeholder="確認密碼" type="password">
      </div>
      <div>
        <input class="login btn-lg btn-block" type="submit" value="註冊新帳號">
      </div>
    </form>
    <a class="login" href="/login">登入</a>
    <a class="facebook btn-lg btn-block" href="#"><i class="fa fa-facebook pull-left"></i>使用 Facebook 登入</a>
  </div>
</div>